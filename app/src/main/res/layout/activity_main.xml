<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.example.anushi.calculator.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/et1"
            android:hint="enter number"
            android:inputType="number"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/btn1"
            android:textStyle="bold"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:background="@drawable/grey"
            android:text="delete" />

        <Button
            android:id="@+id/btn2"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:textAllCaps="false"
            android:text="sqrt" />

        <Button
            android:id="@+id/btn3"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:textAllCaps="false"
            android:background="@drawable/grey"
            android:text="cube" />

        <Button
            android:id="@+id/btn4"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:textAllCaps="false"
            android:text="clear" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/bt7"
            android:textStyle="bold"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/grey"
            android:text="7" />

        <Button
            android:id="@+id/bt8"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="8" />

        <Button
            android:id="@+id/bt9"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="9" />

        <Button
            android:id="@+id/btn7"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/grey"
            android:layout_weight="2.5"
            android:text="*" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt4"
            android:textStyle="bold"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/grey"
            android:text="4" />

        <Button
            android:id="@+id/bt5"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="5" />

        <Button
            android:id="@+id/bt6"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="6" />

        <Button
            android:id="@+id/btn8"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="/" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt1"
            android:textStyle="bold"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/grey"
            android:text="1" />

        <Button
            android:id="@+id/bt2"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="2" />

        <Button
            android:id="@+id/bt3"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="3" />

        <Button
            android:id="@+id/btn6"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="-" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btndot"
            android:textStyle="bold"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/grey"
            android:text="." />

        <Button
            android:id="@+id/bt0"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_weight="2.5"
            android:layout_height="50dp"
            android:background="@drawable/grey"
            android:text="0" />

        <Button
            android:id="@+id/btn9"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="=" />

        <Button
            android:id="@+id/btn5"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:background="@drawable/grey"
            android:text="+" />
    </TableRow>


</TableLayout>
